<%= simple_form_for([@bulletin, @post], html: {class: 'horizontal_form', wrapper: :horizontal_form,}) do |f| %>
  <%= f.error_notification %>
    <%= f.input :title, placeholder: "Title", label: false, input_html: {size:80} %>
    <br>
    <%= f.input :content, placeholder: "Content.", input_html: { rows: 20, cols: 140 }, label: false %>

    <%= f.input :picture, as: :file, label: "사진" %>
    <%= f.hidden_field :picture_cache %>

    <div class="form-actions" align="right">
        <%= f.button :submit, class:"btn btn-default", id:"submit", style: "background-color:#50c1e9" %>
    </div>

<% end %>
